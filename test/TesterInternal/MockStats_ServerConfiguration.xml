<?xml version="1.0" encoding="utf-8"?>
<OrleansConfiguration xmlns="urn:orleans">
  <Globals>
    <StatisticsProviders>
      <Provider Type="UnitTests.Stats.MockStatsSiloCollector" Name="MockStats" />
    </StatisticsProviders>
    <Liveness LivenessType ="MembershipTableGrain"/>
    <ReminderService ReminderServiceType ="ReminderTableGrain"/>
  </Globals>
  <Defaults>
    <Networking Address="localhost" Port="22222" />
    <ProxyingGateway Address="localhost" Port="40000" />
    <Tracing DefaultTraceLevel="Info" TraceToConsole="false" TraceToFile="{0}-{1}.log">
      <TraceLevelOverride LogPrefix="Application" TraceLevel="Info" />
      <TraceLevelOverride LogPrefix="SiloLogStatistics" TraceLevel="Warning" />
    </Tracing>
    <Statistics MetricsTableWriteInterval="1s" LogWriteInterval="1s" WriteLogStatisticsToTable="true" />
    <Assemblies>
      <Assembly Path=".\TestGrainInterfaces.dll"/>
      <Assembly Path=".\TestGrains.dll"/>
      <Assembly Path=".\TestFSharpInterfaces.dll"/>
      <Assembly Path=".\TestFSharp.dll"/>
      <Assembly Path=".\Orleans.dll"/>
      <Assembly Path=".\OrleansRuntime.dll"/>
      <Assembly Path=".\TestInternalGrainInterfaces.dll"/>
      <Assembly Path=".\TestInternalGrains.dll"/>
    </Assemblies>
  </Defaults>
</OrleansConfiguration>
